<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>
            authentication_resources
        </param-name>
        <param-value>
            WEB-INF/authentication_resources.txt
        </param-value>
    </context-param>
    <context-param>
        <param-name>
            admin_resources
        </param-name>
        <param-value>
            WEB-INF/admin_resources.txt
        </param-value>
    </context-param>
    <context-param>
        <param-name>
            customer_resources
        </param-name>
        <param-value>
            WEB-INF/customer_resources.txt
        </param-value>
    </context-param>
    <filter>
        <filter-name>ExceptionFilter</filter-name>
        <filter-class>khangnh.filters.ExceptionFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>khangnh.filters.AuthenticationFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>khangnh.filters.AuthorizationFilter</filter-class>
    </filter>
    <filter>
        <filter-name>DispatcherFilter</filter-name>
        <filter-class>khangnh.filters.DispatcherFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ExceptionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>DispatcherFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>khangnh.listeners.ContextConfigureListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>DefaultServlet</servlet-name>
        <servlet-class>khangnh.servlets.DefaultServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>khangnh.servlets.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>khangnh.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToCartServlet</servlet-name>
        <servlet-class>khangnh.servlets.AddToCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewCartServlet</servlet-name>
        <servlet-class>khangnh.servlets.ViewCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateInCartServlet</servlet-name>
        <servlet-class>khangnh.servlets.UpdateInCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteInCartServlet</servlet-name>
        <servlet-class>khangnh.servlets.DeleteInCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RentingServlet</servlet-name>
        <servlet-class>khangnh.servlets.RentingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewOrderHistoryServlet</servlet-name>
        <servlet-class>khangnh.servlets.ViewOrderHistoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CancelOrderServlet</servlet-name>
        <servlet-class>khangnh.servlets.CancelOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewOrderDetailServlet</servlet-name>
        <servlet-class>khangnh.servlets.ViewOrderDetailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FeedBackServlet</servlet-name>
        <servlet-class>khangnh.servlets.FeedBackServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FeedBackFormServlet</servlet-name>
        <servlet-class>khangnh.servlets.FeedBackFormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendFeedBackServlet</servlet-name>
        <servlet-class>khangnh.servlets.SendFeedBackServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>khangnh.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PrintOrderToConfirmServlet</servlet-name>
        <servlet-class>khangnh.servlets.PrintOrderToConfirmServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>khangnh.servlets.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActivationServlet</servlet-name>
        <servlet-class>khangnh.servlets.ActivationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DefaultServlet</servlet-name>
        <url-pattern>/DefaultServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/SearchServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToCartServlet</servlet-name>
        <url-pattern>/AddToCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewCartServlet</servlet-name>
        <url-pattern>/ViewCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateInCartServlet</servlet-name>
        <url-pattern>/UpdateInCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteInCartServlet</servlet-name>
        <url-pattern>/DeleteInCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RentingServlet</servlet-name>
        <url-pattern>/RentingServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewOrderHistoryServlet</servlet-name>
        <url-pattern>/ViewOrderHistoryServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CancelOrderServlet</servlet-name>
        <url-pattern>/CancelOrderServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewOrderDetailServlet</servlet-name>
        <url-pattern>/ViewOrderDetailServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FeedBackServlet</servlet-name>
        <url-pattern>/FeedBackServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FeedBackFormServlet</servlet-name>
        <url-pattern>/FeedBackFormServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendFeedBackServlet</servlet-name>
        <url-pattern>/SendFeedBackServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrintOrderToConfirmServlet</servlet-name>
        <url-pattern>/PrintOrderToConfirmServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivationServlet</servlet-name>
        <url-pattern>/ActivationServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>403</error-code>
        <location>/error403.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/error404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error500.jsp</location>
    </error-page>
    <resource-ref>
        <res-ref-name>DBCon</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
